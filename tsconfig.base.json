{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["es2017"],
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "noEmit": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "skipLibCheck": false,
      "strict": true
    },
    "exclude": [
      "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
    ]
  }
